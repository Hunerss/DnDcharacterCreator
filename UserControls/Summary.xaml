                        <TextBox x:Name="arcana_prof" Text="Prof" Visibility="Hidden" Background="Transparent" IsReadOnly="True" />
                    </DockPanel>

                    <DockPanel>
                        <TextBlock Text="Athletics " />
                        <TextBlock Text="(STR): " />
                        <TextBox x:Name="athletics_score" Text="placeholder" Background="Transparent" IsReadOnly="True" />
                        <TextBox x:Name="athletics_prof" Text="Prof" Visibility="Hidden" Background="Transparent" IsReadOnly="True" />
                    </DockPanel>

                    <DockPanel>
                        <TextBlock Text="Deception " />

                        <TextBox x:Name="charisma_sv_prof" Text="Prof" Visibility="Hidden" Background="Transparent" IsReadOnly="True"/>
                    </DockPanel>



                    <TextBlock Text="Complex informaions" />
                    <DockPanel>
                        <TextBlock Text="Alignment: " />
                        <TextBox x:Name="alignment" Text="placeholder" Background="Transparent" IsReadOnly="True"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="Background: " />
                        <TextBox x:Name="background" Text="placeholder" Background="Transparent" IsReadOnly="True"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="Description: " />
                        <TextBox x:Name="description" Text="placeholder" Background="Transparent" IsReadOnly="True"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="Ideals: " />

                        <TextBox x:Name="nature_score" Text="placeholder" Background="Transparent" IsReadOnly="True" />
                        <TextBox x:Name="nature_prof" Text="Prof" Visibility="Hidden" Background="Transparent" IsReadOnly="True" />

                        <TextBox x:Name="persuasion_prof" Text="Prof" Visibility="Hidden" Background="Transparent" IsReadOnly="True" />
                    </DockPanel>

                    <DockPanel>
                        <TextBlock Text="Religion " />
                        <TextBlock Text="(WIS): " />
                        <TextBox x:Name="religion_score" Text="placeholder" Background="Transparent" IsReadOnly="True" />
                        <TextBox x:Name="religion_prof" Text="Prof" Visibility="Hidden" Background="Transparent" IsReadOnly="True" />
                    </DockPanel>

                    <DockPanel>
                        <TextBlock Text="Sleight of Hand " />
                        <TextBlock Text="(DEX): " />
                        <TextBox x:Name="sleight_of_hand_score" Text="placeholder" Background="Transparent" IsReadOnly="True" />
                        <TextBox x:Name="sleight_of_hand_prof" Text="Prof" Visibility="Hidden" Background="Transparent" IsReadOnly="True" />
                    </DockPanel>

                    <DockPanel>
                        <TextBlock Text="Stealth " />
                        <TextBlock Text="(DEX): " />
                        <TextBox x:Name="stealth_score" Text="placeholder" Background="Transparent" IsReadOnly="True" />
                        <TextBox x:Name="stealth_prof" Text="Prof" Visibility="Hidden" Background="Transparent" IsReadOnly="True" />
                    </DockPanel>

                    <DockPanel>
                        <TextBlock Text="Survival " />
                        <TextBlock Text="(WIS): " />
                        <TextBox x:Name="survival_score" Text="placeholder" Background="Transparent" IsReadOnly="True" />
                        <TextBox x:Name="survival_prof" Text="Prof" Visibility="Hidden" Background="Transparent" IsReadOnly="True" />
                    </DockPanel>


                    <TextBlock Text="Saving throws" />
                    <DockPanel>
                        <TextBlock Text="Strength Saving Throws: " />
                        <TextBox x:Name="strength_sv" Text="placeholder" Background="Transparent" IsReadOnly="True"/>
                        <TextBox x:Name="strength_sv_prof" Text="Prof" Visibility="Hidden" Background="Transparent" IsReadOnly="True"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="Dexterity Saving Throws: " />
                        <TextBox x:Name="dexterity_sv" Text="placeholder" Background="Transparent" IsReadOnly="True"/>
                        <TextBox x:Name="dexterity_sv_prof" Text="Prof" Visibility="Hidden" Background="Transparent" IsReadOnly="True"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="Constitution Saving Throws: " />
                        <TextBox x:Name="constitution_sv" Text="placeholder" Background="Transparent" IsReadOnly="True"/>
                        <TextBox x:Name="constitution_sv_prof" Text="Prof" Visibility="Hidden" Background="Transparent" IsReadOnly="True"/>
                    </DockPanel>
                    <DockPanel>

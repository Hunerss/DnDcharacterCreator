                    </DockPanel>

                    <DockPanel>
                        <TextBlock Text="Intimidation " />
                        <TextBlock Text="(CHA): " />
                        <TextBox x:Name="intimidation_score" Text="placeholder" Background="Transparent" IsReadOnly="True" />
                        <TextBox x:Name="intimidation_prof" Text="Prof" Visibility="Hidden" Background="Transparent" IsReadOnly="True" />
                    </DockPanel>

                    <DockPanel>
                        <TextBlock Text="Investigation " />
                        <TextBlock Text="(INT): " />
                        <TextBox x:Name="investigation_score" Text="placeholder" Background="Transparent" IsReadOnly="True" />
                        <TextBox x:Name="investigation_prof" Text="Prof" Visibility="Hidden" Background="Transparent" IsReadOnly="True" />
                    </DockPanel>

                    <DockPanel>
                        <TextBlock Text="Medicine " />
                        <TextBlock Text="(WIS): " />
                        <TextBox x:Name="medicine_score" Text="placeholder" Background="Transparent" IsReadOnly="True" />
                        <TextBox x:Name="medicine_prof" Text="Prof" Visibility="Hidden" Background="Transparent" IsReadOnly="True" />
                    </DockPanel>

                    <DockPanel>
                        <TextBlock Text="Nature " />
